source 'https://rubygems.org'

# a DSL for web applications
gem 'sinatra', '~> 1.4'
gem 'sinatra-contrib'

# a modern, concurrent web server for ruby
gem 'puma'

# a template language
gem 'slim', '~> 3.0'

# A scheduler process to replace cron
gem 'clockwork', '~> 1.2'

# Ruby interface to PostgreSQL
gem 'pg'

# an Object Relational Mapper written in Ruby
gem 'data_mapper'

# PostgreSQL Adapter for DataMapper
gem 'dm-postgres-adapter'

# daemonization
gem 'daemons'

gem 'rake'

group :development do
  # manage Procfile-based applications
  gem 'foreman'
  # a deployment automation tool
  gem 'capistrano', '~> 3.5'
  gem 'capistrano-rbenv', '~> 2.0'
  gem 'capistrano-bundler', '~> 1.1'
  gem 'capistrano3-puma', '~> 1.2'
end
